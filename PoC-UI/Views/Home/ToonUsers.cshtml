@model IEnumerable<Domain.Account.Account>

@{
    ViewBag.Title = "ToonUsers";
}

<h2>Users</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naam)
        </th>
        <th>
            Action
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naam)
        </td>
        <td>
            @Html.ActionLink("Show Alerts", "ShowAlerts", new { id=item.AccountId })
        </td>
    </tr>
}

</table>
